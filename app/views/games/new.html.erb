  <h3>Welcome to</h3>
  <h1>🛸the longest word-game🛸</h1>
<div class="container">
  <h4>Here is your grid :</h4>
  <div class="letter-grid">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" value="<%= params[:word] %>" placeholder="What's the longest word you can find ?">
    <input type="submit" value="Play">
  </form>
  <div class="results">
    <h4>Results :</h4>
    <p><span>Your word :</span><%= params[:word] %> <br><span>Time to answer :</span><br> <span>Score :</span></p>
    <p><span>Message : </span>Well done ! 👍</p>
  </div>
</div>
<div class="new">
  <%= link_to "New game >", new_path %>
</div>
